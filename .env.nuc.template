# AI Crypto Trading Agent - Intel NUC Environment Configuration Template
# Copy this file to /opt/trading-agent/.env and update the values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Application name and version
APP_NAME=AI_Crypto_Trading_Agent
APP_VERSION=1.0.0

# =============================================================================
# ORACLE CLOUD SSH TUNNEL CONFIGURATION
# =============================================================================
# Oracle Cloud instance details
ORACLE_SSH_HOST=168.138.104.117
ORACLE_SSH_USERNAME=opc
ORACLE_SSH_PORT=22
SSH_PRIVATE_KEY_PATH=/opt/trading-agent/keys/oracle_key

# SSH tunnel configuration
SSH_TUNNEL_LOCAL_PORT=8443
SSH_TUNNEL_REMOTE_HOST=api.gateio.ws
SSH_TUNNEL_REMOTE_PORT=443
SSH_TUNNEL_BIND_ADDRESS=127.0.0.1

# SSH connection options
SSH_CONNECT_TIMEOUT=30
SSH_SERVER_ALIVE_INTERVAL=60
SSH_SERVER_ALIVE_COUNT_MAX=3
SSH_STRICT_HOST_KEY_CHECKING=no

# =============================================================================
# GATE.IO API CONFIGURATION (via SSH tunnel)
# =============================================================================
# Gate.io API credentials (REPLACE WITH YOUR ACTUAL CREDENTIALS)
GATE_IO_API_KEY=your_gate_io_api_key_here
GATE_IO_API_SECRET=your_gate_io_api_secret_here

# Gate.io API endpoints (via SSH tunnel)
GATE_IO_BASE_URL=http://localhost:8443/api/v4
GATE_IO_WS_URL=ws://localhost:8443/ws/v4
GATE_IO_ENABLED=true

# API rate limiting and retry configuration
GATE_IO_RATE_LIMIT_PER_SECOND=10
GATE_IO_MAX_RETRIES=3
GATE_IO_RETRY_DELAY=1000
GATE_IO_REQUEST_TIMEOUT=30000

# =============================================================================
# DATABASE CONFIGURATION (Local PostgreSQL)
# =============================================================================
# PostgreSQL connection details
DATABASE_URL=postgresql://trading:trading_secure_password_2024@localhost:5432/trading_agent
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=trading_agent
DATABASE_USER=trading
DATABASE_PASSWORD=trading_secure_password_2024

# Database connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=30000
DATABASE_POOL_CONNECTION_TIMEOUT=60000

# Database SSL configuration (disabled for local)
DATABASE_SSL=false

# =============================================================================
# TELEGRAM NOTIFICATIONS
# =============================================================================
# Telegram bot configuration (REPLACE WITH YOUR ACTUAL CREDENTIALS)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLED=true

# Telegram notification settings
TELEGRAM_RATE_LIMIT_PER_MINUTE=20
TELEGRAM_MAX_MESSAGE_LENGTH=4096
TELEGRAM_PARSE_MODE=HTML
TELEGRAM_DISABLE_WEB_PAGE_PREVIEW=true

# Notification triggers
TELEGRAM_NOTIFY_TRADES=true
TELEGRAM_NOTIFY_ERRORS=true
TELEGRAM_NOTIFY_SYSTEM_STATUS=true
TELEGRAM_NOTIFY_BALANCE_CHANGES=true

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
# Email SMTP configuration (REPLACE WITH YOUR ACTUAL CREDENTIALS)
EMAIL_ENABLED=true
EMAIL_FROM=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_TO=alerts@yourdomain.com

# SMTP server settings (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_TLS=true

# Email notification settings
EMAIL_RATE_LIMIT_PER_HOUR=50
EMAIL_SUBJECT_PREFIX=[Trading Agent]
EMAIL_HTML_ENABLED=true

# Email notification triggers
EMAIL_NOTIFY_TRADES=true
EMAIL_NOTIFY_ERRORS=true
EMAIL_NOTIFY_DAILY_SUMMARY=true
EMAIL_NOTIFY_SYSTEM_ALERTS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/trading-agent/app.log
LOG_ERROR_FILE_PATH=/var/log/trading-agent/error.log

# Log rotation settings
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=30
LOG_DATE_PATTERN=YYYY-MM-DD

# Console logging
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_LEVEL=info
LOG_CONSOLE_COLORIZE=true

# Structured logging
LOG_FORMAT=json
LOG_TIMESTAMP=true
LOG_INCLUDE_STACK_TRACE=true

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
# Dashboard server settings
DASHBOARD_ENABLED=true
DASHBOARD_PORT=3000
DASHBOARD_HOST=0.0.0.0

# Dashboard security
DASHBOARD_AUTH_ENABLED=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=secure_dashboard_password_2024

# Dashboard features
DASHBOARD_REAL_TIME_UPDATES=true
DASHBOARD_UPDATE_INTERVAL=5000
DASHBOARD_CHART_HISTORY_DAYS=30
DASHBOARD_SHOW_SENSITIVE_DATA=false

# CORS settings for local network access
DASHBOARD_CORS_ENABLED=true
DASHBOARD_CORS_ORIGINS=http://192.168.*.*:3000,http://10.*.*.*:3000,http://172.16.*.*:3000

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading mode settings
TRADING_MODE=live
PAPER_TRADING=false
DRY_RUN=false

# Trading pairs and markets
TRADING_PAIRS=BTC_USDT,ETH_USDT,ADA_USDT
BASE_CURRENCY=USDT
MIN_TRADE_AMOUNT=10
MAX_TRADE_AMOUNT=1000

# Risk management
MAX_POSITION_SIZE_PERCENT=10
STOP_LOSS_PERCENT=5
TAKE_PROFIT_PERCENT=10
MAX_DAILY_LOSS_PERCENT=5

# Trading strategy
STRATEGY_NAME=ai_sentiment_momentum
STRATEGY_ENABLED=true
STRATEGY_CONFIDENCE_THRESHOLD=0.7
STRATEGY_REBALANCE_INTERVAL=3600000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT and encryption
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API security
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100
API_CORS_ENABLED=true

# Security headers
SECURITY_HELMET_ENABLED=true
SECURITY_HTTPS_REDIRECT=false
SECURITY_HSTS_ENABLED=false

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=5000

# Performance monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_SLOW_QUERIES=true
PERFORMANCE_SLOW_QUERY_THRESHOLD=1000

# System monitoring
SYSTEM_MONITORING_ENABLED=true
SYSTEM_MONITORING_INTERVAL=300000
SYSTEM_CPU_ALERT_THRESHOLD=80
SYSTEM_MEMORY_ALERT_THRESHOLD=80
SYSTEM_DISK_ALERT_THRESHOLD=85

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
# Backup configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=/opt/trading-agent/backups

# Database backup
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_COMPRESSION=true
DATABASE_BACKUP_ENCRYPTION=false

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================
# Debug settings (disable in production)
DEBUG_ENABLED=false
DEBUG_LEVEL=0
DEBUG_LOG_API_REQUESTS=false
DEBUG_LOG_DATABASE_QUERIES=false

# Testing configuration
TEST_MODE=false
TEST_API_DELAY=0
TEST_DATABASE_RESET=false

# =============================================================================
# INTEL NUC SPECIFIC SETTINGS
# =============================================================================
# Hardware monitoring
INTEL_NUC_MONITORING_ENABLED=true
INTEL_NUC_TEMPERATURE_ALERT_THRESHOLD=75
INTEL_NUC_FAN_SPEED_MONITORING=true

# Network configuration
LOCAL_NETWORK_INTERFACE=eth0
LOCAL_NETWORK_MONITORING=true
INTERNET_CONNECTIVITY_CHECK_URL=https://www.google.com
INTERNET_CONNECTIVITY_CHECK_INTERVAL=300000

# Power management
POWER_MANAGEMENT_ENABLED=true
POWER_SAVE_MODE_THRESHOLD=20
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# =============================================================================
# ORACLE CLOUD INTEGRATION
# =============================================================================
# Oracle Cloud monitoring
ORACLE_CLOUD_MONITORING_ENABLED=true
ORACLE_CLOUD_HEALTH_CHECK_URL=http://168.138.104.117:8080/health
ORACLE_CLOUD_HEALTH_CHECK_INTERVAL=300000

# Tunnel monitoring
TUNNEL_HEALTH_CHECK_ENABLED=true
TUNNEL_HEALTH_CHECK_INTERVAL=60000
TUNNEL_RECONNECT_ATTEMPTS=5
TUNNEL_RECONNECT_DELAY=10000

# =============================================================================
# NOTIFICATION TEMPLATES AND FORMATTING
# =============================================================================
# Message formatting
NOTIFICATION_USE_EMOJIS=true
NOTIFICATION_USE_MARKDOWN=true
NOTIFICATION_INCLUDE_CHARTS=true
NOTIFICATION_TIMEZONE=America/New_York

# Custom notification templates
NOTIFICATION_TRADE_TEMPLATE=custom
NOTIFICATION_ERROR_TEMPLATE=detailed
NOTIFICATION_SYSTEM_TEMPLATE=comprehensive

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature toggles
FEATURE_AI_SENTIMENT_ANALYSIS=true
FEATURE_ADVANCED_CHARTING=true
FEATURE_MOBILE_DASHBOARD=true
FEATURE_VOICE_NOTIFICATIONS=false
FEATURE_AUTOMATED_REPORTING=true
FEATURE_STRATEGY_OPTIMIZATION=true

# Experimental features (use with caution)
EXPERIMENTAL_FEATURES_ENABLED=false
EXPERIMENTAL_ML_PREDICTIONS=false
EXPERIMENTAL_SOCIAL_TRADING=false