# =============================================================================
# AI CRYPTO TRADING AGENT - ENVIRONMENT CONFIGURATION
# =============================================================================
# CRITICAL: This file contains sensitive configuration for a financial trading system
# Never commit actual credentials to version control
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
API_PORT=3001
DASHBOARD_PORT=3000

# =============================================================================
# SECURITY CONFIGURATION - MILITARY GRADE
# =============================================================================
# Master encryption key for sensitive data (generate with: openssl rand -hex 32)
MASTER_ENCRYPTION_KEY=your_master_encryption_key_here_64_chars_minimum

# JWT secret for authentication (generate with: openssl rand -hex 64)
JWT_SECRET=your_jwt_secret_here_128_chars_minimum

# API security keys
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# Session security
SESSION_TIMEOUT_MS=1800000
SESSION_SECRET=your_session_secret_here

# =============================================================================
# GATE.IO API CONFIGURATION - HANDLE WITH EXTREME CARE
# =============================================================================
# CRITICAL: These credentials control access to your trading capital
# Store securely and never share or commit to version control
GATE_IO_API_KEY=your_gate_io_api_key_here
GATE_IO_API_SECRET=your_gate_io_api_secret_here
GATE_IO_API_PASSPHRASE=your_gate_io_passphrase_here

# Gate.io API settings
GATE_IO_BASE_URL=https://api.gateio.ws
GATE_IO_TESTNET=false
GATE_IO_RATE_LIMIT_MS=100

# =============================================================================
# ORACLE FREE TIER SSH TUNNEL CONFIGURATION
# =============================================================================
# Oracle Cloud instance details
ORACLE_HOST=168.138.104.117
ORACLE_SSH_PORT=22
ORACLE_USERNAME=ubuntu
ORACLE_PRIVATE_KEY_PATH=/path/to/your/oracle_private_key.pem

# SSH tunnel configuration
SSH_TUNNEL_LOCAL_PORT=8080
SSH_TUNNEL_REMOTE_PORT=8080
SSH_TUNNEL_KEEP_ALIVE=true
SSH_TUNNEL_COMPRESSION=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading pairs to monitor and trade
DEFAULT_TRADING_PAIRS=BTC_USDT,ETH_USDT

# Risk management settings
RISK_PERCENTAGE_PER_TRADE=2.5
MAX_DAILY_LOSS_PERCENTAGE=5.0
MIN_RISK_REWARD_RATIO=1.3
STOP_LOSS_PERCENTAGE=1.0

# Position sizing
MAX_POSITION_SIZE_USD=1000
MIN_POSITION_SIZE_USD=10
COMPOUND_PROFITS=true

# Trading strategy settings
ENABLE_MOVING_AVERAGE_STRATEGY=true
ENABLE_RSI_STRATEGY=true
ENABLE_MACD_STRATEGY=true
ENABLE_FIBONACCI_STRATEGY=true
ENABLE_BREAKOUT_STRATEGY=true

# =============================================================================
# AI AND LLM CONFIGURATION
# =============================================================================
# LLM settings optimized for Intel NUC (i5 CPU, 12GB RAM)
LLM_MODEL_PATH=/path/to/your/optimized_model
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7
LLM_CONTEXT_WINDOW=4096

# AI analysis settings
ENABLE_AI_MARKET_ANALYSIS=true
ENABLE_AI_DECISION_EXPLANATION=true
AI_CONFIDENCE_THRESHOLD=0.75

# =============================================================================
# SENTIMENT ANALYSIS CONFIGURATION
# =============================================================================
# Twitter API credentials
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Reddit API credentials
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=AI_Crypto_Trading_Agent_v1.0

# News API credentials
NEWS_API_KEY=your_news_api_key_here

# Sentiment analysis settings
SENTIMENT_UPDATE_INTERVAL_MS=300000
SENTIMENT_WEIGHT_TWITTER=0.4
SENTIMENT_WEIGHT_REDDIT=0.3
SENTIMENT_WEIGHT_NEWS=0.3

# =============================================================================
# COMPREHENSIVE NOTIFICATION SYSTEM CONFIGURATION
# =============================================================================
# CRITICAL: Notification system handles trading alerts and security notifications
# Configure all channels for redundant communication

# =============================================================================
# EMAIL NOTIFICATION SERVICE
# =============================================================================
# SMTP server configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_trading_agent_email@gmail.com
SMTP_PASS=your_encrypted_app_password_here
SMTP_FROM_ADDRESS=ai-trading-agent@yourdomain.com
SMTP_TLS_REJECT_UNAUTHORIZED=true

# Email recipients
NOTIFICATION_EMAIL=your_primary_email@gmail.com
SECURITY_EMAIL=your_security_email@gmail.com

# Email notification settings
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_RATE_LIMIT_PER_MINUTE=10
EMAIL_RATE_LIMIT_PER_HOUR=100
EMAIL_DELIVERY_TIMEOUT_MS=30000

# =============================================================================
# TELEGRAM BOT INTEGRATION
# =============================================================================
# Telegram Bot API configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Telegram user authorization (comma-separated user IDs)
TELEGRAM_AUTHORIZED_USERS=123456789,987654321
TELEGRAM_ADMIN_USERS=123456789

# Telegram notification settings
TELEGRAM_NOTIFICATIONS_ENABLED=true
TELEGRAM_RATE_LIMIT_PER_MINUTE=20
TELEGRAM_MESSAGE_TIMEOUT_MS=10000
TELEGRAM_EMOJI_ENABLED=true

# =============================================================================
# MULTI-CHANNEL NOTIFICATION ROUTING
# =============================================================================
# Routing configuration
NOTIFICATION_ROUTING_ENABLED=true
NOTIFICATION_DEDUPLICATION_ENABLED=true
NOTIFICATION_ESCALATION_ENABLED=true

# Priority routing settings
HIGH_PRIORITY_CHANNELS=email,telegram
NORMAL_PRIORITY_CHANNELS=telegram
LOW_PRIORITY_CHANNELS=telegram
CRITICAL_PRIORITY_CHANNELS=email,telegram

# Rate limiting and deduplication
NOTIFICATION_DEDUP_WINDOW_MINUTES=5
NOTIFICATION_RATE_LIMIT_WINDOW_MINUTES=60
NOTIFICATION_MAX_PER_MINUTE=30
NOTIFICATION_MAX_PER_HOUR=500
NOTIFICATION_MAX_PER_DAY=2000

# Escalation settings
ESCALATION_DELAY_MINUTES=15
ESCALATION_MAX_ATTEMPTS=3
ESCALATION_CHANNELS=telegram

# =============================================================================
# TRADING-SPECIFIC NOTIFICATIONS
# =============================================================================
# Trade execution notifications
NOTIFY_TRADE_EXECUTION=true
NOTIFY_PROFIT_TARGETS=true
NOTIFY_STOP_LOSSES=true
NOTIFY_POSITION_CHANGES=true

# Performance summary notifications
DAILY_SUMMARY_ENABLED=true
DAILY_SUMMARY_TIME=23:59
WEEKLY_SUMMARY_ENABLED=true
WEEKLY_SUMMARY_DAY=sunday
WEEKLY_SUMMARY_TIME=23:59

# Threshold-based notifications
NOTIFY_LARGE_TRADES_THRESHOLD=500
NOTIFY_SIGNIFICANT_PNL_THRESHOLD=100
NOTIFY_BALANCE_MILESTONES=true
BALANCE_MILESTONE_INCREMENTS=1000,5000,10000,25000,50000,100000

# =============================================================================
# SYSTEM HEALTH NOTIFICATIONS
# =============================================================================
# System monitoring alerts
SYSTEM_HEALTH_NOTIFICATIONS=true
SYSTEM_HEALTH_CHECK_INTERVAL_MINUTES=5
SYSTEM_HEALTH_ALERT_COOLDOWN_MINUTES=30

# Hardware threshold alerts
CPU_USAGE_ALERT_THRESHOLD=80
MEMORY_USAGE_ALERT_THRESHOLD=85
DISK_USAGE_ALERT_THRESHOLD=90
NETWORK_LATENCY_ALERT_THRESHOLD=1000

# Trading system alerts
API_LATENCY_ALERT_THRESHOLD=5000
CONNECTION_FAILURE_ALERT=true
TRADING_ENGINE_HEALTH_ALERT=true

# =============================================================================
# SECURITY ALERT NOTIFICATIONS
# =============================================================================
# Security monitoring
SECURITY_ALERTS_ENABLED=true
SECURITY_ALERT_CHANNELS=email,telegram
SECURITY_ALERT_PRIORITY=critical

# Threat detection alerts
UNAUTHORIZED_ACCESS_ALERTS=true
SUSPICIOUS_ACTIVITY_ALERTS=true
API_ABUSE_ALERTS=true
CREDENTIAL_COMPROMISE_ALERTS=true

# Emergency notifications
EMERGENCY_NOTIFICATION_ENABLED=true
EMERGENCY_CONTACT_EMAIL=emergency@yourdomain.com
EMERGENCY_CONTACT_TELEGRAM=emergency_telegram_chat_id

# =============================================================================
# NOTIFICATION FORMATTING AND TEMPLATES
# =============================================================================
# Message formatting
USE_HTML_EMAIL_TEMPLATES=true
USE_EMOJI_IN_MESSAGES=true
INCLUDE_CHARTS_IN_SUMMARIES=true
INCLUDE_PERFORMANCE_METRICS=true

# Template customization
EMAIL_TEMPLATE_THEME=modern
TELEGRAM_MESSAGE_FORMAT=rich
NOTIFICATION_TIMEZONE=UTC
DATE_FORMAT=ISO
CURRENCY_FORMAT=USD

# =============================================================================
# NOTIFICATION DELIVERY AND RELIABILITY
# =============================================================================
# Delivery confirmation
TRACK_DELIVERY_STATUS=true
RETRY_FAILED_NOTIFICATIONS=true
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MULTIPLIER=2

# Fallback mechanisms
ENABLE_NOTIFICATION_FALLBACKS=true
FALLBACK_TO_EMAIL_ON_TELEGRAM_FAIL=true
FALLBACK_TO_TELEGRAM_ON_EMAIL_FAIL=true

# Health monitoring
NOTIFICATION_HEALTH_CHECK_ENABLED=true
NOTIFICATION_HEALTH_CHECK_INTERVAL_MINUTES=10
NOTIFICATION_SERVICE_TIMEOUT_MS=30000

# =============================================================================
# NOTIFICATION TESTING AND DEBUGGING
# =============================================================================
# Testing settings
NOTIFICATION_TEST_MODE=false
SEND_TEST_NOTIFICATIONS_ON_STARTUP=true
TEST_NOTIFICATION_RECIPIENTS=test@yourdomain.com
TEST_TELEGRAM_CHAT_ID=test_chat_id

# Debug settings
NOTIFICATION_DEBUG_LOGGING=true
LOG_NOTIFICATION_CONTENT=false
LOG_DELIVERY_STATISTICS=true

# =============================================================================
# INTEL NUC SYSTEM MONITORING
# =============================================================================
# Hardware monitoring thresholds
CPU_USAGE_WARNING_THRESHOLD=70
CPU_USAGE_CRITICAL_THRESHOLD=85
MEMORY_USAGE_WARNING_THRESHOLD=75
MEMORY_USAGE_CRITICAL_THRESHOLD=90
DISK_USAGE_WARNING_THRESHOLD=80
DISK_USAGE_CRITICAL_THRESHOLD=95

# Temperature monitoring (Celsius)
CPU_TEMP_WARNING_THRESHOLD=70
CPU_TEMP_CRITICAL_THRESHOLD=80

# Network monitoring
NETWORK_LATENCY_WARNING_MS=100
NETWORK_LATENCY_CRITICAL_MS=500

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database path (for local development)
DATABASE_PATH=./data/trading_agent.db

# Database settings
DATABASE_BACKUP_INTERVAL_HOURS=6
DATABASE_RETENTION_DAYS=90
DATABASE_ENCRYPTION_ENABLED=true

# =============================================================================
# LOGGING AND AUDIT CONFIGURATION
# =============================================================================
# Log file paths
LOG_DIR=./logs
AUDIT_LOG_DIR=./logs/audit
SECURITY_LOG_DIR=./logs/security

# Log retention
LOG_RETENTION_DAYS=30
AUDIT_LOG_RETENTION_DAYS=365
SECURITY_LOG_RETENTION_DAYS=365

# Log levels: error, warn, info, debug
TRADING_LOG_LEVEL=info
SECURITY_LOG_LEVEL=debug
SYSTEM_LOG_LEVEL=info

# =============================================================================
# BACKUP AND RECOVERY CONFIGURATION
# =============================================================================
# Backup settings
BACKUP_DIR=./backups
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_COMPRESSION_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Recovery settings
ENABLE_AUTO_RECOVERY=true
RECOVERY_TIMEOUT_MS=30000

# =============================================================================
# DEVELOPMENT AND TESTING CONFIGURATION
# =============================================================================
# Development settings
ENABLE_DEBUG_MODE=false
ENABLE_PAPER_TRADING=true
MOCK_EXTERNAL_APIS=false

# Testing settings
TEST_DATABASE_PATH=./data/test_trading_agent.db
TEST_LOG_LEVEL=debug

# =============================================================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# =============================================================================
# Production settings (only set in production environment)
# PRODUCTION_MODE=true
# ENABLE_PERFORMANCE_MONITORING=true
# ENABLE_ADVANCED_SECURITY=true
# ENABLE_COMPLIANCE_LOGGING=true

